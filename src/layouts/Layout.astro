---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Asim Waqas - Applied Research Scientist at Moffitt Cancer Center specializing in AI/ML for oncology, multimodal learning, and digital pathology." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Asim Waqas" />
    <meta name="keywords" content="Asim Waqas, AI, Machine Learning, Cancer Research, Digital Pathology, Moffitt Cancer Center, Multimodal Learning" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://waasem.github.io" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Source+Sans+3:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
