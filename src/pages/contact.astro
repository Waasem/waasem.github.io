---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Footer from '../components/Footer.astro';

const contactInfo = [
  { icon: "fas fa-envelope", label: "Email", value: "Asim.Waqas@moffitt.org", href: "mailto:Asim.Waqas@moffitt.org" },
  { icon: "fas fa-phone", label: "Phone", value: "(813) 469-2063", href: "tel:+18134692063" },
  { icon: "fas fa-map-marker-alt", label: "Address", value: "Moffitt Cancer Center\n12902 Magnolia Drive\nTampa, FL 33612", href: null }
];

const socialLinks = [
  { icon: "fas fa-graduation-cap", label: "Google Scholar", href: "https://scholar.google.com/citations?user=vq-Mr-sAAAAJ&hl=en", description: "View publication metrics and citations" },
  { icon: "fab fa-linkedin", label: "LinkedIn", href: "https://www.linkedin.com/in/asim-waqas-7773b248", description: "Professional network and updates" },
  { icon: "fab fa-github", label: "GitHub", href: "https://github.com/Waasem", description: "Personal code repositories" },
  { icon: "fab fa-orcid", label: "ORCID", href: "https://orcid.org/0000-0002-6834-4710", description: "Research identifier and works" },
  { icon: "fas fa-flask", label: "Lab Rasool (GitHub)", href: "https://github.com/lab-rasool", description: "Lab's open-source projects" },
  { icon: "fas fa-robot", label: "HuggingFace", href: "https://huggingface.co/Lab-Rasool", description: "ML models and datasets" },
  { icon: "fas fa-microscope", label: "Lab Rasool", href: "https://lab.moffitt.org/Rasool/", description: "Research lab homepage" }
];
---

<Layout title="Contact | Asim Waqas, Ph.D.">
  <Navbar />
  
  <div class="pt-24 pb-8 px-6 bg-gradient-to-br from-primary-600 to-primary-900 text-white">
    <div class="max-w-5xl mx-auto text-center">
      <p class="text-primary-200 text-xs font-semibold tracking-[0.15em] uppercase mb-4">Get in Touch</p>
      <h1 class="font-display text-4xl md:text-5xl font-semibold">Contact & Links</h1>
      <p class="text-primary-100 mt-4 max-w-2xl mx-auto">
        I'm always interested in collaborations, speaking opportunities, and discussing research ideas.
        Feel free to reach out through any of the channels below.
      </p>
    </div>
  </div>
  
  <!-- Contact Info -->
  <SectionContainer background="white">
    <div class="grid lg:grid-cols-2 gap-12">
      <div>
        <h2 class="font-display text-2xl font-semibold text-gray-900 mb-8">Contact Information</h2>
        
        <div class="space-y-6">
          {contactInfo.map((item) => (
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <i class={`${item.icon} text-primary-500 text-lg`}></i>
              </div>
              <div>
                <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">{item.label}</span>
                {item.href ? (
                  <a href={item.href} class="block text-gray-900 font-medium hover:text-primary-500 transition-colors mt-1 whitespace-pre-line">
                    {item.value}
                  </a>
                ) : (
                  <p class="text-gray-900 mt-1 whitespace-pre-line">{item.value}</p>
                )}
              </div>
            </div>
          ))}
        </div>
        
        <div class="mt-10 p-6 bg-gray-50 rounded-lg border border-gray-200">
          <h3 class="font-semibold text-gray-900 mb-2 flex items-center gap-2">
            <i class="fas fa-building text-primary-500"></i>
            Affiliation
          </h3>
          <p class="text-gray-600 text-sm">
            <strong>H. Lee Moffitt Cancer Center and Research Institute</strong><br />
            Department of Cancer Epidemiology / Machine Learning<br />
            Member, Lab Rasool
          </p>
        </div>
      </div>
      
      <div>
        <h2 class="font-display text-2xl font-semibold text-gray-900 mb-8">Research Profiles & Links</h2>
        
        <div class="grid gap-4">
          {socialLinks.map((link) => (
            <a 
              href={link.href} 
              target="_blank" 
              rel="noopener"
              class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg border border-gray-200 hover:border-primary-500 hover:bg-white transition-all group"
            >
              <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center shadow-sm group-hover:bg-primary-500 transition-colors">
                <i class={`${link.icon} text-primary-500 text-lg group-hover:text-white transition-colors`}></i>
              </div>
              <div class="flex-1">
                <span class="font-semibold text-gray-900 group-hover:text-primary-500 transition-colors">
                  {link.label}
                </span>
                <p class="text-gray-500 text-sm">{link.description}</p>
              </div>
              <i class="fas fa-arrow-right text-gray-400 group-hover:text-primary-500 transition-colors"></i>
            </a>
          ))}
        </div>
      </div>
    </div>
  </SectionContainer>
  
  <!-- CV Download -->
  <SectionContainer background="gray">
    <div class="text-center">
      <h2 class="font-display text-2xl font-semibold text-gray-900 mb-4">Curriculum Vitae</h2>
      <p class="text-gray-600 mb-6 max-w-xl mx-auto">
        For a comprehensive overview of my academic background, research experience, publications, 
        and professional activities, please download my CV.
      </p>
      <a 
        href="mailto:Asim.Waqas@moffitt.org?subject=CV%20Request"
        class="btn btn-primary"
      >
        <i class="fas fa-file-pdf"></i>
        Request CV via Email
      </a>
    </div>
  </SectionContainer>
  
  <Footer />
</Layout>
