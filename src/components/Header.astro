<header class="min-h-screen flex items-center pt-20 pb-16 px-6 bg-gradient-to-br from-gray-50 to-gray-100 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute top-[-50%] right-[-20%] w-4/5 h-[200%] bg-gradient-radial from-primary-500/5 to-transparent pointer-events-none"></div>
  
  <div class="max-w-6xl mx-auto w-full grid lg:grid-cols-2 gap-12 items-center">
    <div class="animate-fade-in-up order-2 lg:order-1">
      <p class="text-xs font-semibold tracking-[0.15em] uppercase text-primary-500 mb-4">
        Applied Research Scientist
      </p>
      
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-semibold text-gray-900 tracking-tight leading-tight mb-6">
        Asim Waqas, Ph.D.
      </h1>
      
      <p class="text-lg text-gray-600 mb-8 max-w-xl leading-relaxed">
        Developing AI/ML solutions for oncology research, specializing in multimodal deep learning, 
        digital pathology, and large language models for cancer diagnosis and prognosis.
      </p>
      
      <div class="flex items-center gap-4 mb-8 p-4 bg-white rounded-lg shadow-sm border border-gray-200">
        <i class="fas fa-microscope text-2xl text-primary-500"></i>
        <div>
          <strong class="block text-gray-900">Moffitt Cancer Center</strong>
          <span class="text-sm text-gray-600">Dept. of Cancer Epidemiology / Machine Learning</span>
        </div>
      </div>
      
      <div class="flex flex-wrap gap-4">
        <a href="/contact" class="btn btn-primary">
          <i class="fas fa-envelope"></i>
          Get in Touch
        </a>
        <a href="https://scholar.google.com/citations?user=vq-Mr-sAAAAJ&hl=en" target="_blank" rel="noopener" class="btn btn-outline">
          <i class="fas fa-graduation-cap"></i>
          Google Scholar
        </a>
      </div>
    </div>
    
    <div class="flex justify-center order-1 lg:order-2 animate-fade-in-up animation-delay-200">
      <div class="relative">
        <div class="absolute top-5 left-5 w-full h-full bg-primary-500/10 rounded-lg"></div>
        <img 
          src="/assets/profile-photo.jpg" 
          alt="Asim Waqas" 
          class="relative w-72 h-80 md:w-80 md:h-96 object-cover rounded-lg shadow-2xl"
        />
      </div>
    </div>
  </div>
</header>

<style>
  .bg-gradient-radial {
    background: radial-gradient(ellipse at center, var(--tw-gradient-from), var(--tw-gradient-to));
  }
</style>
