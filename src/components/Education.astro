---
import { education, certifications } from '../data/education.js';
---

<div class="grid lg:grid-cols-2 gap-12">
  <div>
    <h3 class="font-display text-2xl font-semibold text-gray-900 mb-8 flex items-center gap-3">
      <i class="fas fa-graduation-cap text-primary-500"></i>
      Education
    </h3>
    
    <div class="relative pl-8 border-l-2 border-gray-200 space-y-8">
      {education.map((edu) => (
        <div class="relative">
          <div class="absolute -left-[2.55rem] top-1 w-4 h-4 bg-white border-4 border-primary-500 rounded-full"></div>
          <span class="text-xs font-semibold text-primary-500 uppercase tracking-wider">
            {edu.period}
          </span>
          <h4 class="font-semibold text-gray-900 mt-1">{edu.degree}</h4>
          <p class="text-gray-600 text-sm">{edu.institution}</p>
          {edu.location && <p class="text-gray-500 text-sm">{edu.location}</p>}
          {edu.honors && <p class="text-primary-600 text-sm font-medium mt-1">{edu.honors}</p>}
          {edu.thesis && (
            <p class="text-gray-500 text-sm mt-2 italic">
              Thesis: {edu.thesis}
              {edu.thesisLink && (
                <a href={edu.thesisLink} target="_blank" rel="noopener" class="text-primary-500 hover:underline ml-1">
                  <i class="fas fa-external-link-alt text-xs"></i>
                </a>
              )}
            </p>
          )}
        </div>
      ))}
    </div>
  </div>
  
  <div>
    <h3 class="font-display text-2xl font-semibold text-gray-900 mb-8 flex items-center gap-3">
      <i class="fas fa-certificate text-primary-500"></i>
      Certifications
    </h3>
    
    <ul class="space-y-3">
      {certifications.map((cert) => (
        <li class="flex items-start gap-3 text-gray-700">
          <i class="fas fa-check-circle text-primary-500 mt-1 flex-shrink-0"></i>
          <span>{cert}</span>
        </li>
      ))}
    </ul>
  </div>
</div>
